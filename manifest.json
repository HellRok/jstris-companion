{
  "manifest_version": 2,
  "name": "Jstris Companion",
  "version": "0.3",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://jstris.jezevec10.com/*"
      ],
      "js": ["jstris-companion.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "64": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "jstris-companion@oequacki.com"
    }
  }
}
